{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "module": "CommonJS",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "types": [
      "node",
      "jest",
      "less",
      "sass",
      "stylus"
    ],
    // this is for tsconfig_path_aliases test
    "baseUrl": "./test/tsconfig_path_aliases/src",
    "paths": {
      "@sub/*": [
        "sub/*"
      ]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}